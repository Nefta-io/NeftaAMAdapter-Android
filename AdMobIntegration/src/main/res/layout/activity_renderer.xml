<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.cardview.widget.CardView
        android:id="@+id/closeZone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="right|top"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/closeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close" />

        <ProgressBar
            android:id="@+id/countdownBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:progress="50"
            android:progressDrawable="@drawable/ring" />

        <TextView
            android:id="@+id/countdownText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="120"
            android:textColor="#FFFFFF" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/closeConfirmation"
        android:layout_width="280dp"
        android:layout_height="110dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#440075"
        app:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Close video?"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/bodyPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:background="#FFFFFF"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="5dp"
            app:contentPaddingLeft="5dp">

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="You will lose your reward"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/closeButton"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:height="30dp"
                android:gravity="center"
                android:text="CLOSE VIDEO"
                android:textColor="#000000"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/resumeButton"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|left"
            android:layout_marginStart="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginBottom="-5dp"
            app:cardBackgroundColor="#8300B2"
            app:cardCornerRadius="5dp"
            app:contentPaddingBottom="5dp"
            app:contentPaddingLeft="5dp">

            <TextView
                android:id="@+id/resumeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="RESUME VIDEO"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</FrameLayout>
