<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionName="1.1.1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application>
        <meta-data android:name="NeftaSDKVersion" android:value="3.3.1" />
        <activity
            android:name="com.nefta.sdk.RendererPortrait"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:hardwareAccelerated="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.nefta.sdk.RendererReversePortrait"
            android:screenOrientation="reversePortrait"
            android:configChanges="orientation|screenSize"
            android:hardwareAccelerated="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.nefta.sdk.RendererLandscape"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:hardwareAccelerated="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.nefta.sdk.RendererReverseLandscape"
            android:screenOrientation="reverseLandscape"
            android:configChanges="orientation|screenSize"
            android:hardwareAccelerated="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
    </application>
</manifest>